                            Charisma
                        </div>
                        <div class="border border-3 border-danger rounded col-4">
                            @ConfigureByTable(@Model.Cha)
                        </div>
                    </div>
                </div>
                <span class="margin_bot">Saving throws</span>
            </div>
        </div>
        <div class="sences">
            <div class="border border-3 border-dark rounded H-16">
                <div class="row margin_bot mt-2">
                    <div class="col-1"></div>
                    <div class="border border-3 border-dark rounded col-2">
                        @{
                            int passive_percep = ConfigureByTable(@Model.Wis) + 12;
                        }
                        @passive_percep
                    </div>
                    <div class="col-9">
                        Passive Perception
                    </div>
                </div>
                <div class="row margin_bot">
                    <div class="col-1"></div>
                    <div class="border border-3 border-dark rounded col-2">
                        @{
                            int passive_invest = ConfigureByTable(@Model.Int) + 10;
                        }
                        @passive_invest
                    </div>
                    <div class="col-9">
                        Passive Investigation
                    </div>
                </div>
                <div class="row margin_bot">
                    <div class="col-1"></div>
                    <div class="border border-3 border-dark rounded col-2">
                        @{
                            int passive_insight = ConfigureByTable(@Model.Wis) + 10;
                        }
                        @passive_insight
                    </div>
                    <div class="col-9">
                        Passive Insight
                    </div>
                </div>
                <span>Sences</span>
            </div>
        </div>
        <div class="proficiencies">
            <div class="border border-3 border-dark H-16">
            </div>
        </div>
        <div class="skills">

        </div>
        <div class="div5"> </div>
        <div class="div6"> </div>
